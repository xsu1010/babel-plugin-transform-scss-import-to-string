{
  "name": "@xsu1010/babel-plugin-transform-scss-import-to-string",
  "type": "module",
  "version": "0.1.0",
  "description": "Babel plugin for transforming SCSS imports to static variable declarations with transpiled CSS string. Modernized.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "release": "tsc && changeset publish",
    "prepare": "husky"
  },
  "keywords": [
    "babel",
    "scss",
    "css",
    "inline",
    "transform"
  ],
  "author": "Neo Design System",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.22.19",
    "@babel/traverse": "^7.24.5",
    "@babel/types": "^7.24.5",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/babel__core": "^7.20.5",
    "@types/babel__traverse": "^7.20.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "commitiquette": "^1.2.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "sass": "1.58.3",
    "semantic-release": "^23.1.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@babel/core": "^7.0.0",
    "sass": "^1.58.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
